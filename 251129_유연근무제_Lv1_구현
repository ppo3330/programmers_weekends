//O(n)
//schedules.size = n, timelogs: n*M (1<=M<=7),
//처음에 요일이 토요일 일요일이 되는것만 생각했음. -> startday + j % 7로 해결 일:0 토:6 -> 실패 35/100점
//제한시간이 10분을 더했을때 1시간이 넘어가면 앞자리가 바뀌는점 생각해야했음. -> limittime으로 해결 100/100점
//제한사항이나 조건을 제대로 읽어보고 생각해보기.
#include <string>
#include <vector>

using namespace std;

int solution(vector<int> schedules, vector<vector<int>> timelogs, int startday) {
    int answer = 0;
    
    for(int i=0;i<schedules.size();i++){
        answer++;
        
        int limittime = schedules[i]%100;
        if(limittime + 10 >= 60) limittime = schedules[i] +50;
        else limittime = schedules[i]+10;
        
        for(int j=0;j<7;j++){
            int today = (startday + j) % 7;
            if(today == 6 or today == 0) continue;
            
            if(limittime < timelogs[i][j]){
                answer--;
                break;
            }
        }
    }
    
    
    return answer;
}
