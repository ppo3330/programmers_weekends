//O(1)
//규칙만 맞춰서 구현. Lv1이어야할 것 같음
//O가 두개의 줄을 완성하는 경우를 안세고 있었던 오류 -> 해결

#include <string>
#include <vector>

using namespace std;

int solution(vector<string> board) {
    int x= 0;
    int o=0;
    
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++){
            if (board[i][j] == 'O') o++;
            if(board[i][j] == 'X') x++;
        }
    }
    
    int ocomplete=0;
    int xcomplete=0;
    
    for(int i=0;i<3;i++){
        if(board[i][0]== 'O' and board[i][1] == 'O'  and board[i][2] == 'O') ocomplete++;
        if(board[0][i]== 'O' and board[1][i] == 'O'  and board[2][i] == 'O') ocomplete++;
        if(board[i][0]== 'X' and board[i][1] == 'X'  and board[i][2] == 'X') xcomplete++;
        if(board[0][i]== 'X' and board[1][i] == 'X'  and board[2][i] == 'X') xcomplete++;
    }
    if(board[0][0] == 'O' and board[1][1] == 'O' and board[2][2]=='O') ocomplete++;
    if(board[0][0] == 'X' and board[1][1] == 'X' and board[2][2]=='X') xcomplete++;
    if(board[2][0] == 'O' and board[1][1] == 'O' and board[0][2]=='O') ocomplete++;
    if(board[2][0] == 'X' and board[1][1] == 'X' and board[0][2]=='X') xcomplete++;

    if(o > x+1 or o < x) return 0;   
    if (ocomplete ==1 and xcomplete == 1) return 0;
    if ((xcomplete >=1 and o == x+1) or (ocomplete >=1 and o == x)) return 0;
       
    return 1;
}
